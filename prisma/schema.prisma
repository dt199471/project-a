// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  image         String?
  properties    Property[]
  sentMessages  Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  favorites     Favorite[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Property {
  id            String    @id @default(cuid())
  title         String
  description   String
  price         BigInt
  address       String
  city          String
  prefecture    String
  nearestStation String? // 最寄り駅
  buildYear     Int?     // 築年
  buildMonth    Int?     // 築月
  layout        String?   // 間取り（例: 3LDK）
  area          Float?    // 専有面積（㎡）
  structure     String?   // 建物構造（木造、RC、SRC等）
  floor         Int?      // 階数
  totalFloors   Int?      // 総階数
  direction     String?   // 向き（南向き等）
  parking       Boolean   @default(false) // 駐車場有無
  petAllowed    Boolean   @default(false) // ペット可否
  managementFee Int?      // 管理費（円/月）
  repairReserve Int?      // 修繕積立金（円/月）
  renovationHistory String? // リフォーム履歴
  status        String    @default("ACTIVE") // ACTIVE, NEGOTIATING, SOLD, DRAFT
  images        String   // JSON array of image URLs stored as string
  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages      Message[]
  favorites     Favorite[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Message {
  id          String   @id @default(cuid())
  content     String
  propertyId  String
  property    Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  senderId    String
  sender      User     @relation("SentMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiverId  String
  receiver    User     @relation("ReceivedMessages", fields: [receiverId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

model Favorite {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([userId, propertyId])
}
